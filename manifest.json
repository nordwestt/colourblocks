{
    "name":"ðŸŽ¨ ColourBlocks",
    "description":"Colours text in pastel colours for better readability",
    "version": "1.0",
    "action":{},
    "manifest_version":3,
    "background" : {
        "service_worker":"background.js"
    },
    "permissions":["activeTab", "scripting", "storage", "tabs"],
    "commands":{
        "_execute_action": {
            "suggested_key": {
                "default":"Ctrl+Shift+Y",
                "mac":"Ctrl+Shift+Y", 
                "linux":"Ctrl+Shift+Y"
            },
            "description" : "Toggles the functionality of this extension"
        }
    },
    "content_scripts": [
        {
          "js": [
            "content.js"
          ],
          "matches": [
            "http://*/*",
            "https://*/*"
          ]
        }
    ], 
    "icons":{
        "16":"icon_16.png",
        "48":"icon_48.png",
        "128":"icon_128.png"
    }
}
